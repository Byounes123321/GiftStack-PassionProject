@model GiftStack.Models.ViewModels.UpdateRecipient

@{
    ViewBag.Title = "Edit";
}

<h2>
    Update @Model.SelectedRecipient.RecipientName
</h2>

<form class="addForm" action="/Recipient/update/@Model.SelectedRecipient.RecipientId" method="post">
    <div style="display:none;">
        <input type="number" name="RecipientId" value="@Model.SelectedRecipient.RecipientId" />
    </div>
    <div>
        <label class="addLable" for="RecipientName">Name:</label>
        <input class="textInput" type="text" name="RecipientName" value="@Model.SelectedRecipient.RecipientName" />
    </div>
    <div>
        <input class="submit-btn" type="submit" value="Update Recipient" />

    </div>
</form>